{
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist",
        "target": "es6",
        "lib": ["ES2020"],
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "removeComments": true
    },
    "include": ["src"]
}
